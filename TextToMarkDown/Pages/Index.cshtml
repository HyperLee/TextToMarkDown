@page
@model IndexModel
@{
    ViewData["Title"] = "Text to Markdown Converter";
}

<div class="container mt-4">
    <div id="alertArea"></div>
    
    <div class="row">
        <div class="col-md-6">
            <h3>Input</h3>
            <textarea id="inputText" class="form-control" rows="15" placeholder="Paste your text here..."></textarea>
            <div class="mt-2 text-end">
                <span id="charCount" class="text-muted">0 / 100,000</span>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Markdown Output</h3>
            <textarea id="outputText" class="form-control" rows="15" readonly></textarea>
            <div class="mt-2 text-end">
                <button id="copyBtn" class="btn btn-outline-secondary">Copy</button>
            </div>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12 text-center">
            <button id="convertBtn" class="btn btn-primary btn-lg">Convert to Markdown</button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module">
        import '/js/markdown-converter.js';
        import '/js/clipboard-handler.js';
        import '/js/ui-controller.js';
        window.UIController.init();
    </script>
}
